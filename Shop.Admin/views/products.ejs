<h1>Products (<%= items.length %>)</h1>

<form action="search" method="GET" class="products-search-form">
    <div class="products-search">
        <div class="field">
            <label for="filter-input" class="label">Title:</label>
            <input id="filter-input" class="input" type="text" name="title" value="<%= queryParams?.title || "" %>" />
        </div>

        <div class="field">
            <label for="filter-description" class="label">Description:</label>
            <input id="filter-description" class="input" type="text" name="description"
                value="<%= queryParams?.description || "" %>" />
        </div>

        <div class="field">
            <label for="filter-price-from" class="label">Price from:</label>
            <input id="filter-price-from" class="input" type="text" name="priceFrom" value="<%= queryParams?.priceFrom || "" %>" />
        </div>

        <div class="field">
            <label for="filter-price-to" class="label">Price to:</label>
            <input id="filter-price-to" class="input" type="text" name="priceTo" value="<%= queryParams?.priceTo || "" %>" />
        </div>
    </div>

    <div class="button-panel">
        <button type="submit" class="button button-black">Search</button>
        <a href="<%= `/${process.env.ADMIN_PATH}` %>" class="button button-red">Reset filter</a>
    </div>
</form>

<div class="products-list">
    <% items.forEach(function(product) { %>
        <a href="<%= `${product.id}` %>">
            <div class="product-item">
                <div class="image">
                    <!-- <a href="<%= `${product.id}` %>"> -->
                        <img src="<%= product.thumbnail?.url || "img/product-placeholder.png" %>" alt="<%= product.title %>">
                    <!-- </a> -->
                </div>
                <div class="info">
                    <div class="title">
                        <%= product.title %>
                    </div>
                    <div>
                        <span class="label">Images:</span>
                        <%= product.images?.length || 0 %>
                    </div>
                    <div>
                        <span class="label">Price:</span>
                        <%= product.price %>
                    </div>
                </div>
            </div>
        </a>
    <% }); %>
</div>